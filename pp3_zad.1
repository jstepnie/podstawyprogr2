#include <stdio.h>

void encrypt(char* text, int len) {
	int key, sp = 0;
	for (key = 0; key < len; key++)
		if (text[key] == ' ' && key == sp)
			sp++;
		else if (text[key] == ' ')
			break;
		
	key -= sp;
	
	for (int i = 0; i < len; i++)
		if (text[i] != ' ') {
			if (text[i] >= 97 && text[i] <= 122)
				text[i] = ((text[i] - 97 + key) % 26) + 97;
			else if (text[i] >= 65 && text[i] <= 90)
				text[i] = ((text[i] - 65 + key) % 26) + 65;
		}
}

int main() {
    char text[] = "TEST szyfru Cezara ala z x";
	encrypt(text, 26);
	printf("%s\n", text);
}
